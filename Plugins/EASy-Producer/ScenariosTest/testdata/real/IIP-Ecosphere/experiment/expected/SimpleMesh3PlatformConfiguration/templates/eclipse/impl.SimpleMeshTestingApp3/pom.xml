<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <artifactId>SimpleMeshTestingApp3Services</artifactId>
    <packaging>jar</packaging>
    <name>SimpleMeshTestingApp3-services</name>
    <description>Implementation of Simple Mesh Testing App 3</description>
    <groupId>de.iip-ecosphere.platform.apps</groupId>
    <version>0.1.0-SNAPSHOT</version>
    <parent>
        <groupId>de.iip-ecosphere.platform</groupId>
        <artifactId>platformDependencies</artifactId>
        <version>0.7.1-SNAPSHOT</version>
        <relativePath/>
    </parent>
    <!--Template application/service implementation POM.-->
    <properties>
        <iip.version>0.7.1-SNAPSHOT</iip.version>
        <!--Could be project.version, but that may differ depending on implementation, context, ...-->
    </properties>
    <profiles>
        <profile>
            <id>App</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <dependencies>
                <dependency>
                    <groupId>de.iip-ecosphere.platform</groupId>
                    <artifactId>apps.AppInterfacesSimpleMesh3</artifactId>
                    <version>0.7.1-SNAPSHOT</version>
                    <exclusions>
                        <exclusion>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot-starter-web</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot-starter-actuator</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>de.iip-ecosphere.platform.apps</groupId>
                    <artifactId>SimpleMeshTestingApp3</artifactId>
                    <version>0.1.0-SNAPSHOT</version>
                    <exclusions>
                        <exclusion>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot-starter-web</artifactId>
                        </exclusion>
                        <exclusion>
                            <groupId>org.springframework.boot</groupId>
                            <artifactId>spring-boot-starter-actuator</artifactId>
                        </exclusion>
                    </exclusions>
                </dependency>
                <dependency>
                    <groupId>de.iip-ecosphere.platform.apps</groupId>
                    <artifactId>SimpleMeshTestingApp3</artifactId>
                    <version>0.1.0-SNAPSHOT</version>
                    <type>test-jar</type>
                    <scope>test</scope>
                </dependency>
                <!--Your other plugins extending/overriding the parent build plugins go here or after.-->
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>de.iip-ecosphere.platform</groupId>
                        <artifactId>dependency-plugin</artifactId>
                        <version>${iip.version}</version>
                        <executions>
                            <execution>
                                <id>pythonSources</id>
                                <goals>
                                    <goal>unpack</goal>
                                </goals>
                                <phase>validate</phase>
                                <configuration>
                                    <artifactItems>
                                        <artifactItem>
                                            <groupId>de.iip-ecosphere.platform</groupId>
                                            <artifactId>services.environment</artifactId>
                                            <version>${iip.version}</version>
                                            <type>zip</type>
                                            <classifier>python</classifier>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/pyEnv</outputDirectory>
                                            <destFileName>pyEnv.zip</destFileName>
                                        </artifactItem>
                                        <artifactItem>
                                            <groupId>de.iip-ecosphere.platform</groupId>
                                            <artifactId>apps.AppInterfacesSimpleMesh3</artifactId>
                                            <version>${iip.version}</version>
                                            <type>0.7.1-SNAPSHOT</type>
                                            <type>zip</type>
                                            <classifier>python</classifier>
                                            <overWrite>true</overWrite>
                                            <outputDirectory>${project.build.directory}/pySrc</outputDirectory>
                                            <destFileName>pyIf.zip</destFileName>
                                        </artifactItem>
                                    </artifactItems>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-assembly-plugin</artifactId>
                        <version>3.1.1</version>
                        <executions/>
                    </plugin>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>3.0.0</version>
                        <executions>
                            <execution>
                                <id>SimpleDataReceiver3Test</id>
                                <configuration>
                                    <mainClass>iip.nodes.SimpleDataReceiver3Test</mainClass>
                                    <classpathFilenameExclusions>transport.amqp-${iip.version}.jar</classpathFilenameExclusions>
                                    <classpathScope>test</classpathScope>
                                </configuration>
                            </execution>
                            <execution>
                                <id>SimpleDataSource3Test</id>
                                <configuration>
                                    <mainClass>iip.nodes.SimpleDataSource3Test</mainClass>
                                    <classpathFilenameExclusions>transport.amqp-${iip.version}.jar</classpathFilenameExclusions>
                                    <classpathScope>test</classpathScope>
                                </configuration>
                            </execution>
                            <execution>
                                <id>SimpleDataTransformer3Test</id>
                                <configuration>
                                    <mainClass>iip.nodes.SimpleDataTransformer3Test</mainClass>
                                    <classpathFilenameExclusions>transport.amqp-${iip.version}.jar</classpathFilenameExclusions>
                                    <classpathScope>test</classpathScope>
                                </configuration>
                            </execution>
                            <execution>
                                <id>App</id>
                                <configuration>
                                    <mainClass>de.iip_ecosphere.platform.examples.SpringStartup</mainClass>
                                    <arguments>
                                        <argument>&lt;put relative location of integrated, generated application here&gt;</argument>
                                    </arguments>
                                    <classpathScope>test</classpathScope>
                                </configuration>
                            </execution>
                            <execution>
                                <id>transportLogger</id>
                                <configuration>
                                    <mainClass>de.iip_ecosphere.platform.services.environment.TransportLogger</mainClass>
                                    <arguments>
                                        <argument>--traces=true</argument>
                                        <argument>--status=true</argument>
                                    </arguments>
                                    <classpathScope>test</classpathScope>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
    <dependencies>
        <!--Due to required exclusions, this dependency must be repeated as early as possible. Typically, it does not conflict with usual dependencies in profiles.-->
        <dependency>
            <groupId>org.glassfish</groupId>
            <artifactId>jakarta.el</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>services.environment</artifactId>
            <version>${iip.version}</version>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>services.environment.spring</artifactId>
            <version>${iip.version}</version>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>kiServices.functions</artifactId>
            <version>${iip.version}</version>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>examples</artifactId>
            <version>${iip.version}</version>
            <exclusions>
                <exclusion>
                    <groupId>de.iip-ecosphere.platform</groupId>
                    <artifactId>services.spring</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
        <!--Remaining global dependencies go here.-->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>test</scope>
        </dependency>
        <!--Initially, fixed protocol-->
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>support.aas.basyx</artifactId>
            <version>${iip.version}</version>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>support</artifactId>
            <version>${iip.version}</version>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>transport</artifactId>
            <version>${iip.version}</version>
            <type>test-jar</type>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>transport.amqp</artifactId>
            <version>${iip.version}</version>
        </dependency>
        <dependency>
            <groupId>de.iip-ecosphere.platform</groupId>
            <artifactId>services.spring</artifactId>
            <version>${iip.version}</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-test</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-stream</artifactId>
            <type>test-jar</type>
            <scope>test</scope>
            <classifier>test-binder</classifier>
        </dependency>
        <!--Remaining test dependencies go here.-->
    </dependencies>
</project>
